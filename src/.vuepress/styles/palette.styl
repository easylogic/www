.content pre {
    padding: 1.25em 0em;
    margin: 0px;    
}

.theme-container {
     .navbar {

        .site-namee {
            color: rgba(0, 0, 0, 1) !important; 
        }

    }
} 




.theme-container.custom-page-class {
    background-color: black;
    // background-image: linear-gradient(135deg, #e66969, #245e90, #751010);


    .dropdown-wrapper .nav-dropdown {
        a { 
            color: #1770d9;

            &:hover {
                color: #1770d9; 
            }
        }
    }

    .dropdown-wrapper  {
        .dropdown-title {
            color: white;
        }    
    }

    .navbar {
        z-index: 2000;
        position: fixed;
        background-color: rgba(0, 0, 0, 1);
        border-bottom: 0px;
        color: white;

        .links {
            background-color: transparent;
        }

        .site-name {
            color: white; 
            position: relative;
        }

        a:hover {
            color: rgba(0, 255, 255, 0.5);
        }

    }

    .home {
        // padding: 0px;
        max-width: 100%;
        padding:0px;
        padding-top: 120px;
        padding-bottom: 100px;  

        text-align: center;
        color: white; 

        .footer {
            border-top: 0px;    
            color: rgba(255, 255, 255, 0.7);
        }

        h1 {
            -webkit-background-clip: text;
            background-clip: text;
            color: white;
            font-weight: bold;
            font-size: 50px;
            background-image: radial-gradient(#ff1414 0%, #2fb5f1 100%);
        }
        .hero {
            display: none;    
        }   

        .editor-image {
            text-align: center;

            img {
                border-radius: 5px;
                box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.3);
                max-width: 1200px;
            }

            @media screen and (max-width: 1200px) {
                img {
                    max-width: 100%;
                }
            }

        }

        .getting-started {
            padding: 70px;    

            a {
                display: inline-block;
                vertical-align: middle;
                padding: 15px 40px;
                border: 1px solid white; 
                border-radius: 10px;
                margin: 10px;
                font-size: 20px;
                color: white; 

                &.none-style {
                    border:0px;
                    padding: 0px;


                    &:hover {
                        background-color: transparent;    
                    }                    
                }

                &:hover {
                    background-color: rgba(255, 255, 255, 0.8);    
                    color: #333;
                }
            }
        }

        .editor-summary {

            .list {
                max-width: 900px;
                margin: 0 auto; 
                margin-bottom: 30px;   

                .item {

                    border-radius: 10px;
                    // height: 150px;    
                    box-sizing: border-box;
                    vertical-align: middle;
                    margin-bottom: 20px;
                    // padding: 40px 40px;
                    // box-shadow: 0 0 14px 1px rgba(255, 255, 255, 0.15)
                    // display: grid;
                    // grid-template-columns: 1fr 1fr; 
                    // grid-column-gap: 50px;
                    overflow: auto;

                    .content {
                        padding: 0px 1.5rem;    
                    }

                    .img {
                        text-align: center;
                        max-width: 100%;
                        // height: 300px;
                        // margin:10px;
                        max-height: 300px;
                        overflow: hidden;

                        &.full {
                            // max-width: 0;
                            width:100%;

                            img {
                                max-width: none;
                                height: 300px;
                                max-height: none;
                            } 
                        }
                        // border-radius: 10px;
                    }                    

                    a {
                        color: orange;
                    }


                    .title {
                        text-align: left;    
                        padding: 20px 0px;
                        font-weight: bold;
                        font-size: 30px;
                        margin:0px;
                        font-style: italic;
                    }

                    .description {
                        font-size: 1.1rem;
                        text-align: left;
                        padding-bottom: 10px;
                        color: rgba(255, 255, 255, 0.7);
                    }

                }       
            }

            // background-color: rgba(0, 0, 0, 0.05); 
            padding: 50px 0px;    
        }
    }

}